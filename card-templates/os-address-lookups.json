{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0",
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Jumbotron",
      "title": "OS Address Lookups"
    },
    {
      "id": "osAddressLookup",
      "type": "Input.ApiLookup",
      "showPagination": true,
      "resultsPerPage": 10,
      "buttonText": "Search",
      "endpoint": {
        "name": "system_getOsAddressLookups_1_0"
      },
      "ctxPaths": {
        "results": "results",
        "totalHits": "totalHits"
      },
      "parametersCard": {
        "type": "AdaptiveCard",
        "version": "1.0",
        "body": [
          {
            "id": "status",
            "type": "Input.ChoiceSet",
            "title": "Status",
            "value": "$ALL",
            "choices": [
              {
                "title": "All",
                "value": "$ALL"
              },
              {
                "title": "Succeeded",
                "value": "SUCCEEDED"
              },
              {
                "title": "Failed",
                "value": "FAILED"
              }
            ]
          },
          {
            "id": "createdBy",
            "type": "Input.Text",
            "title": "Created By"
          },
          {
            "id": "createdAt",
            "type": "Input.Date",
            "title": "Created Date",
            "max": "$TODAY",
            "clearable": true
          }
        ]
      },
      "resultsCard": {
        "type": "AdaptiveCard",
        "version": "1.0",
        "body": [
          {
            "type": "TextBlock",
            "text": "{{data.osAddressLookup.summary.totalHits}} result{{data.osAddressLookup.summary.totalHits === 1 ? '' : 's'}} found",
            "weight": "lighter",
            "size": "small"
          },
          {
            "id": "notifyList",
            "type": "List",
            "arrayPath": "data.osAddressLookup.results",
            "clickToLaunch": true,
            "showLaunches": true,
            "templates": {
              "label": "{{item.status}} - {{item.query}}",
              "sublabel": [
                "{{item._created_by}}",
                "{{formatDate(item._created, 'DD/MM/YY HH:mm')}}"
              ]
            }
          }
        ]
      }
    }
  ],
  "actions": [
    {
      "type": "Action.Cancel",
      "title": "Close"
    }
  ],
  "templateMeta": {
    "name": "os-address-lookups",
    "title": "OS Address Lookups",
    "category": "system"
  },
  "hooks": {
    "afterLeave": {
      "actions": [
        {
          "type": "Action.StoreData"
        }
      ]
    }
  }
}
