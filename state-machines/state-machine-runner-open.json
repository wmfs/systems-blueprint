{
  "Comment": "State Machine Runner",
  "name": "State Machine Runner",
  "version": "1.0",
  "categories": [
    "system"
  ],
  "instigators": [
    "user"
  ],
  "instigatorGroup": "app",
  "StartAt": "GetStateMachines",
  "States": {
    "GetStateMachines": {
      "Type": "Task",
      "Resource": "function:system_getAvailableStateMachines",
      "Next": "AwaitingHumanInput"
    },
    "AwaitingHumanInput": {
      "Type": "Task",
      "Resource": "module:awaitingHumanInput",
      "ResourceConfig": {
        "uiType": "form",
        "uiName": "system_stateMachineRunnerOpen",
        "dataPath": "$"
      },
      "End": true
    }
  },
  "restrictions": [
    {
      "roleId": "system_system",
      "allows": [
        "*"
      ]
    }
  ]
}
