{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0",
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "Jumbotron",
          "title": "Release notes for iteration"
        },
        {
          "id": "storyList",
          "type": "List",
          "arrayPath": "data.stories",
          "templates": {
            "label": "{{ item.name }}",
            "sublabel": "{{ item.app_url }}"
          },
          "notFoundText": "No stories found."
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Cancel",
      "title": "Close"
    },
    {
      "type": "Action.PushCard",
      "title": "Download",
      "stateMachineName": "system_downloadReleaseNotes_1_0",
      "input": {
        "id": "$.iterationId"
      }
    }
  ],
  "templateMeta": {
    "name": "release-note-view",
    "title": "Release Notes",
    "category": "system"
  }
}
