{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0",
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "color": "accent",
      "spacing": "small",
      "items": [
        {
          "type": "TextBlock",
          "text": "Stories progressed during {{ data.name }}",
          "weight": "bolder"
        }
      ]
    },
    {
      "type": "Container",
      "color": "warning",
      "spacing": "small",
      "showWhen": "!data.formattedStories.length",
      "items": [
        {
          "type": "TextBlock",
          "text": "No stories have been progressed this iteration"
        }
      ]
    },
    {
      "showWhen": "data.formattedStories.length",
      "type": "MarkupTable",
      "arrayPath": "data.formattedStories",
      "columns": [
        {
          "title": "Story ID",
          "value": "{{ item.storyId }}"
        },
        {
          "title": "Epic",
          "value": "{{ item.epic }}"
        },
        {
          "title": "Story",
          "value": "{{ item.storyTitle }}"
        },
        {
          "title": "Owner(s)",
          "value": "{{ item.owners.join(', ') }}"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Cancel",
      "title": "Close"
    },
    {
      "showWhen": "data.formattedStories.length",
      "type": "Action.PushCard",
      "title": "Download HTML",
      "stateMachineName": "system_downloadProgressedStories_1_0",
      "input": {
        "storiesByOwner": "$.storiesByOwner",
        "id": "$.iterationId",
        "iterationName": "$.name",
        "endDate": "$.endDate",
        "exportType": "HTML"
      }
    }
  ],
  "templateMeta": {
    "name": "view-progressed-stories",
    "title": "Progressed Stories",
    "category": "system"
  }
}
